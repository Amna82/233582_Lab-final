namespace BlazorApp3
{
    public class QuizManaement
    {
 
{
    [Parameter] public string QuestionText { get; set; }
    [Parameter] public List<string> Options { get; set; }
    [Parameter] public string DifficultyLevel { get; set; }
}

<div class="question-card">
    <h3>@QuestionText</h3>
    <ul>
        @foreach (var option in Options)
        {
            <li>@option</li>
        }
    </ul>
    <p>Difficulty: @DifficultyLevel</p>
</div>
{
    border: 1px solid #ccc;
    padding: 15px;
    margin: 10px 0;
    border-radius: 5px;
}
.question-card h3 {
    font-size: 1.2rem;
}
.question-card ul {
    list-style-type: none;
    padding: 0;
}
.question-card li {
    margin: 5px 0;
}

@code {
    [Parameter] public List<Question> Questions { get; set; }
}

<div class="question-list">
    @foreach (var question in Questions)
    {
        <QuestionCard 
            QuestionText="@question.QuestionText"
            Options="@question.Options"
            DifficultyLevel="@question.DifficultyLevel" />
    }
</div>
public class Question
{
    public string QuestionText { get; set; }
    public List<string> Options { get; set; }
    public string DifficultyLevel { get; set; }
}

@using YourApp.Components{
    private List<Question> quizQuestions = new List<Question>
    {
        new Question
        {
            QuestionText = "What is 2 + 2?",
            Options = new List<string> { "3", "4", "5" },
            DifficultyLevel = "Easy"
        },
        new Question
        {
            QuestionText = "What is the capital of France?",
            Options = new List<string> { "Berlin", "Madrid", "Paris" },
            DifficultyLevel = "Medium"
        }
    };
}

<h1>Quiz</h1>
<QuestionList Questions="quizQuestions" />


    }
}













